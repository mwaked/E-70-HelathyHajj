<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.RegistrationActivity">

    <include layout="@layout/app_bar_with_title_only" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:background="@drawable/shape_stroke"
            android:hint="First Name"
            android:paddingEnd="@dimen/_5sdp"
            android:gravity="center_vertical"

            android:paddingStart="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:background="@drawable/shape_stroke"
            android:hint="Last Name"
            android:paddingEnd="@dimen/_5sdp"
            android:gravity="center_vertical"

            android:paddingStart="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:background="@drawable/shape_stroke"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Age (Years)"
                android:gravity="center_vertical"
                android:inputType="number"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                tools:ignore="RtlCompat" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:text="Gender "
                android:textSize="@dimen/_10sdp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:checked="true"
                    android:textSize="@dimen/_10sdp"
                    android:text="Male" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="center_vertical"

                    android:text="Female" />
            </RadioGroup>

        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:background="@drawable/shape_stroke"
            android:hint="Email"
            android:gravity="center_vertical"

            android:inputType="textEmailAddress"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingStart="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:background="@drawable/shape_stroke"
            android:hint="Country"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingStart="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:background="@drawable/shape_stroke"
            android:hint="Languages(Arabic, English ...)"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingStart="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_2sdp"
                android:src="@drawable/saudflag"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_2sdp"
                android:text="+966"
                android:textSize="@dimen/_10sdp"
                tools:ignore="RtlCompat" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="Phone Number"
                android:background="@drawable/shape_stroke"
                android:inputType="number"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:checked="true"
            android:gravity="center_vertical"
            android:text="You have diseases"
            android:textColor="@color/colorGraydark"
            android:textSize="@dimen/_10sdp" />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorPrimary"
            android:text="Next"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

    </ScrollView>

</LinearLayout>